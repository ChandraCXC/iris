<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>cfa.vo</groupId>
    <artifactId>iris2</artifactId>
    <packaging>pom</packaging>
    <version>3.0-SNAPSHOT</version>
    <name>Iris</name>

    <modules>
        <module>iris</module>
        <module>iris-common</module>
        <module>samp-factory</module>
        <module>test-components</module>
        <module>sed-builder</module>
        <module>iris-specview</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <configuration>
                    <header>etc/header.txt</header>
                </configuration>
            </plugin>

        </plugins>
        
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>

        <repository>
            <id>cxc</id>
            <name>cxc</name>
            <url>http://artifactory.cfa.harvard.edu/artifactory/repo</url>
        </repository>
        <repository>
            <url>https://maven.java.net/content/repositories/public</url>
            <id>java.net</id>
            <layout>default</layout>
        </repository>
        <repository>
            <url>http://central.maven.org/maven2/</url>
            <id>central</id>
            <layout>default</layout>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>cxc-releases</id>
            <name>libs-release</name>
            <url>http://artifactory.cfa.harvard.edu/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
            <id>cxc-snapshots</id>
            <name>libs-snapshot</name>
            <url>http://artifactory.cfa.harvard.edu/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>
  
</project>

